<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Servicios</title>
</head>
<body>
    <img src = "~/img/bannerProf.png" width=100%> 
    
         <div class="card-container">
    @foreach (Usuarios tra in ViewBag.Trabajadores)
    {
         if(!@tra.Trabajador){
            <div class="card">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text"> @tra.Nombre</p> 
                    <p class="card-text"> Electricista </p>
                    <p class="card-text">ID: @tra.ID_Usuario</p>
            </div>
            <form action='@Url.Action("ContratarTrabajador")' method="get">
                <input type="hidden" name="TrabajadorId" value="@tra.ID_Usuario" />
                @if(@ViewBag.Login != null){
                    <button type="submit" class="btn btn-primary" data-usuario-id="@tra.ID_Usuario">Contratar</button>
                }
                else{
                    <button type="submit" class="btn btn-primary" data-usuario-id="@tra.ID_Usuario" disabled>Contratar</button>
                }
            </form>

            </div>   
         }
    }
</div>

    
</body>
</html>