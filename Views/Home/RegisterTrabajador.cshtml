<form class="formTrabajador" action='@Url.Action("AgregarUsuario")' method="post">
    <p class="title">Register</p>
    <p class="message">Signup now and get full access to our app.</p>
    <div class="flex">
        <label>
            <input class="inputRegister" type="text" name="Nombre" required="" id="Name">
            <span>Nombre</span>
        </label>

        <label>
            <input class="inputRegister" type="text" name="Apellido" required="" id="Lastname">
            <span>Apellido</span>
        </label>
    </div>  
    <div class="flex">
        <label>
            <input class="inputRegister" type="email" name="Email" required="" id="Email">
            <span>Email</span>
        </label>
        <label>
            <input class="inputRegister" type="text" name="DNI" required="" id="DNI">
            <span>DNI</span>
        </label> 
    </div>
    <label>
        <input class="inputRegister" type="date" name="FechaNacimiento" required="" id="Birthdate">
        <span>Fecha de Nacimiento</span>
    </label>
    <label>
        <input class="inputRegister" type="password" name="Password" required="" id="Password" autocomplete="">
        <span>Contraseña</span>
    </label>
    <label>
        <input class="inputRegister" type="password" name="Password" required="" id="ConfirmPassword" autocomplete="">
        <span>Confirmar contraseña</span>
    </label>
    <label>
        <input class="inputRegister" type="text" name="Matricula" required="" id="Matricula" autocomplete="">
        <span>Ingrese el src de la matricula</span>
    </label>

    <input type="hidden" name="IdValoracion" value="17">

    <button class="submit" id="botonEnviar">Submit</button>
    <p class="signin">¿Ya tienes una cuenta? <a href='@Url.Action("Login")'> <b>Iniciar Sesión </b></a></p>
</form>
