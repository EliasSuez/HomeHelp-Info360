
<form class="formRegister">
    <p class="title">Register </p>
    <p class="message">Signup now and get full access to our app. </p>
        <div class="flex">
        <label>
            <input class="inputRegister" type="text" placeholder="" required="">
            <span>Firstname</span>
        </label>

        <label>
            <input class="inputRegister" type="text" placeholder="" required="">
            <span>Lastname</span>
        </label>
    </div>  
            
    <label>
        <input class="inputRegister" type="email" placeholder="" required="">
        <span>Email</span>
    </label> 
        
    <label>
        <input class="inputRegister" type="password" placeholder="" required="">
        <span>Password</span>
    </label>
    <label>
        <input class="inputRegister" type="password" placeholder="" required="">
        <span>Confirm password</span>
    </label>
    <button class="submit">Submit</button>
    <p class="signin">Already have an acount ? <a href="@Url.Action("Login")">Sign in</a> </p>
</form>