<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeHelp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="../img/Logo.png"/>    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <header>
        <a href='@Url.Action("Index")'><img src="~/img/Logo.png"></a>
        <a href='@Url.Action("Index")'><h1>HomeHelp</h1></a>
        @if(ViewBag.user != null){
            <a href='@Url.Action("Perfil")'><img src="~/img/FotoCliente.png" style="border-radius: 100px; margin-left: -10px; margin-top: 10px;" class="user"></a>
        }
        else{
            <a href='@Url.Action("Crearcuenta")'><img src="~/img/Icon.png" class="user"></a>
        }
        
        <a href='@Url.Action("#")'><h6>Chat</h6></a>
        <a href='@Url.Action("#")'><h6>Consejos</h6></a>
        @if(ViewBag.Trabajador == true){
            <a href='@Url.Action("BrindarServicios")'><h6>Servicios</h6></a>
        }
        else{
            <a href='@Url.Action("Servicios")'><h6>Servicios</h6></a>
        }        
    </header>

    <main role="main">
        @RenderBody()
        
    </main>

    <footer>
        
        <img src="~/img/Logo.png" class="HomeHelp">
        <div class="div-logos">
            <img src="~/img/instagram.png" class="logos">
            <img src="~/img/x.png" class="logos">
            <img src="~/img/facebook.png" class="logos">
            <img src="~/img/linkedin.png" class="logos">
        </div>
        <div>
        <a href='@Url.Action("Crearcuenta")'><p>Usuarios</p></a>
         @if(ViewBag.Trabajador == true){
            <a href='@Url.Action("BrindarServicios")'><h6>Servicios</h6></a>
        }
        else{
            <a href='@Url.Action("Servicios")'><h6>Servicios</h6></a>
        }
        <a href='@Url.Action("#")'><p>Consejos</p></a>
        </div>
        <div>
        <a href='@Url.Action("PoliticaPrivacidad")'><p>Política de privacidad</p></a>
        <a href='@Url.Action("#")'><p>Configuracion</p></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>

</html>
