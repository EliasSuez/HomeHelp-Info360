<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeHelp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="../img/Logo.png"/>    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <header>
        <img src="~/img/Logo.png">
        <h1>HomeHelp</h1>
        <img src="~/img/Icon.png" class="user"> 
        <p>Chat</p>
        <p>Consejos</p>
        <p>Servicios</p>
    </header>

    <main role="main">
        @RenderBody()
        
    </main>

    <footer>
        
        <img src="~/img/Logo.png" class="HomeHelp">
        <div>
            <img src="~/img/instagram.png" class="logos">
            <img src="~/img/x.png" class="logos">
            <img src="~/img/facebook.png" class="logos">
            <img src="~/img/linkedin.png" class="logos">
        </div>
        <p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>

</html>
